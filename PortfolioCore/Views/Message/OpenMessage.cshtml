@model Message
@{
    ViewData["Title"] = "OpenMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Mesaj Detayı</h1>

<input type="hidden" asp-for="MessageId" />
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Mesaj Detayları</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            <b>Gönderen :</b> @Model.NameSurname - <b>Email :</b> @Model.Email - <b>Tarih :</b> @Model.SendDate
                            <br />
                            <b>Mesaj :</b>  @Model.MessageDetail
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

