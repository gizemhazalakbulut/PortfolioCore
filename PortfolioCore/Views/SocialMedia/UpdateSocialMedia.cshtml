@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Sosyal Medya Güncelleme Sayfası</h2>

<form method="post">
    <input type="hidden" asp-for="SocialMediaId" />
    <label>Sosyal Medya Başlığı</label>
    <input type="text" class="form-control" asp-for="Title" style="border:1px solid black;" />
    <br />
    <label>URL Adresi</label>
    <input type="text" class="form-control" asp-for="Url" style="border:1px solid black;" />
    <br />
    <label>İcon</label>
    <input type="text" class="form-control" asp-for="Icon" style="border:1px solid black;" />
    <br />
    <button class="btn btn-primary">Güncelle</button>

</form>

