@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="AboutId" />
    <label>Başlık</label>
    <input type="text" class="form-control" asp-for="Title" style="border:1px solid black;" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" style="border:1px solid black;" />
    <br />
    <label>Resim</label>
    <input type="text" class="form-control" asp-for="ImageUrl" style="border:1px solid black;" />
    <br />
    <label>Doğum Tarihi</label>
    <input type="datetime" class="form-control" asp-for="Birthday" style="border:1px solid black;" />
    <br />
    <label>Yaş</label>
    <input type="number" class="form-control" asp-for="Age" style="border:1px solid black;" />
    <br />
    <label>Web Sitesi</label>
    <input type="text" class="form-control" asp-for="Website" style="border:1px solid black;" />
    <br />
    <label>Telefon</label>
    <input type="text" class="form-control" asp-for="Phone" style="border:1px solid black;" />
    <br />
    <label>Şehir</label>
    <input type="text" class="form-control" asp-for="City" style="border:1px solid black;" />
    <br />
    <label>Lisans</label>
    <input type="text" class="form-control" asp-for="Degree" style="border:1px solid black;" />
    <br />
    <label>Email</label>
    <input type="text" class="form-control" asp-for="Email" style="border:1px solid black;" />
    <br />
    <label>Serbest Çalışma</label>
    <select asp-for="Freelance" class="form-control" style="border:1px solid black;">
        <option value="true">Evet</option>
        <option value="false">Hayır</option>
    </select>
    <br />
    <label>Alt Metin</label>
    <input type="text" class="form-control" asp-for="FooterText" style="border:1px solid black;" />
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>

